<Window x:Class="Random_FloatingTool.ToolBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_FloatingTool"
        mc:Ignorable="d"
        Title="ToolBox"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#95000000"
        Width="250" Height="130"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="最小值" Grid.Row ="0" Grid.Column="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
        <TextBlock Text="最大值" Grid.Row ="1" Grid.Column="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
        
        <Button x:Name="RandomButton" Content="Random" Grid.Row="2" Grid.Column="0" Background="White" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="6" FontSize="16" Click="RandomButton_Click"/>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="MinMinus" Content="-" Grid.Column="0" Foreground="White" Background="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  FontSize="16" BorderThickness="0,0,0,0" Click="MinMinus_Click"/>
            <TextBox x:Name="Min" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="#00000000"  Text="1" IsReadOnly="True" BorderThickness="0,0,0,0" FontSize="16"/>
            <Button x:Name="MinPlus" Content="+" Grid.Column="2" Foreground="White" Background="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  FontSize="16" BorderThickness="0,0,0,0" Click="MinPlus_Click"/>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="MaxMinus" Content="-" Grid.Column="0" Foreground="White" Background="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  FontSize="16" BorderThickness="0,0,0,0" Click="MaxMinus_Click"/>
            <TextBox x:Name="Max" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="#00000000"  Text="57" IsReadOnly="True" BorderThickness="0,0,0,0" FontSize="16"/>
            <Button x:Name="MaxPlus" Content="+" Grid.Column="2" Foreground="White" Background="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  FontSize="16" BorderThickness="0,0,0,0" Click="MaxPlus_Click"/>

        </Grid>


        <TextBox x:Name="Result" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="#00000000" IsReadOnly="True" BorderThickness="0,0,0,0" FontSize="16"/>
    </Grid>
</Window>
