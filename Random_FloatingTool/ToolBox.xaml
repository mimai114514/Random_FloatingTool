<Window x:Name="ToolBar" x:Class="Random_FloatingTool.ToolBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_FloatingTool"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"   
        mc:Ignorable="d"
        Title="ToolBox"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        Width="230" Height="170"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False" Loaded="Window_Loaded" MouseMove="ToolBar_MouseMove" LocationChanged="ToolBar_LocationChanged">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--
            <ui:Button x:Name="nummode_button" Grid.Column="0" Grid.Row="0" Margin="4,4,2,4" Padding="4" Click="nummode_button_Click">
                <ui:FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xF146;"/>
            </ui:Button>

            <ui:Button x:Name="listmode_button" Grid.Column="1" Grid.Row="0" Margin="2,4,4,4" Padding="4" Click="listmode_button_Click">
                <ui:FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE716;"/>
            </ui:Button>
            -->
            <ui:FontIcon x:Name="nummode_button" Grid.Column="0" FontFamily="Segoe MDL2 Assets" Foreground="White" Glyph="&#xE76B;" FontSize="8" Margin="2,0,3,0" MouseLeftButtonUp="nummode_button_MouseLeftButtonUp"/>
            <ui:Anchor Grid.Column="1" Height="24" Padding="2,0,2,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                    <ui:FontIcon x:Name="mode_icon_num" FontFamily="Segoe MDL2 Assets" Foreground="White" Glyph="&#xF146;" Margin="0,0,4,0" Visibility="Collapsed"/>
                    <ui:FontIcon x:Name="mode_icon_list" FontFamily="Segoe MDL2 Assets" Foreground="White" Glyph="&#xE716;" Margin="0,0,4,0"/>
                    <ui:TextBlock x:Name="mode_text" Text="列表" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </ui:Anchor>
            <ui:FontIcon x:Name="listmode_button" Grid.Column="2" FontFamily="Segoe MDL2 Assets" Foreground="DarkGray" Glyph="&#xE76C;" FontSize="8" Margin="3,0,0,0" MouseLeftButtonUp="listmode_button_MouseLeftButtonUp"/>

        </Grid>

        <ui:Button x:Name="close_button" Grid.Row="0" Grid.Column="1" Margin="4" Padding="4" HorizontalAlignment="Right" BorderThickness="0,0,0,0" MouseRightButtonUp="close_button_MouseRightButtonUp" Click="close_button_Click">
            <ui:FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE711;"/>
        </ui:Button>
        
        <TextBlock x:Name="nummode_text_min" Text="最小值" Grid.Row ="1" Grid.Column="0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,2,2,2" TextAlignment="Center" FontSize="18"/>
        <TextBlock x:Name="nummode_text_max" Text="最大值" Grid.Row ="2" Grid.Column="0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,2,2,2" TextAlignment="Center" FontSize="18"/>

        <Button x:Name="RandomButton" Content="抽取" Grid.Row="4" Grid.Column="1" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="6" Padding="2" FontSize="18" MinWidth="100" MinHeight="28" BorderThickness="1" Click="RandomButton_Click"/>
        <Button x:Name="StopButton" Content="停止" Grid.Row="4" Grid.Column="1" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="6" Padding="2" FontSize="18" MinWidth="100" MinHeight="28" BorderThickness="1" Click="StopButton_Click" Visibility="Hidden"/>
        <Button x:Name="FinishButton" Content="完成" Grid.Row="4" Grid.Column="1" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="6" Padding="2" FontSize="18" MinWidth="100" MinHeight="28" BorderThickness="1" Click="FinishButton_Click" Visibility="Hidden"/>

        <TextBlock x:Name="Result" Grid.RowSpan="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="#00000000" FontSize="24"/>
        <TextBlock x:Name="Result_Side" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6" Foreground="White" Background="#00000000" FontSize="14" Visibility="Hidden"/>

        <ui:NumberBox x:Name="nummode_min" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="4,4,6,4" Width="120" Value="1" Cursor="Arrow"/>
        <ui:NumberBox x:Name="nummode_max" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="4,4,6,4" Width="120" Cursor="Arrow" Value="57"/>

        <TextBlock x:Name="listmode_text" Text="列表" Grid.Row ="1" Grid.Column="0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,2,2,2" TextAlignment="Center" FontSize="18" Visibility="Hidden"/>
        <ComboBox x:Name="listmode_combobox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="120" Margin="4,4,6,4" FontSize="16" SelectionChanged="listmode_combobox_SelectionChanged"/>

        <TextBlock x:Name="listmode_text_dedupe" Text="去重" Grid.Row ="2" Grid.Column="0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,2,2,2" TextAlignment="Center" FontSize="18"/>
        <ui:ToggleSwitch x:Name="listmode_dedupe_switch" Grid.Row="2" Grid.Column="1" Background="White" HorizontalAlignment="Right" Margin="4,4,8,4" Click="listmode_dedupe_switch_Click" />

        <TextBlock x:Name="listmode_item_count_text" Text="共X项" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2,2,2" TextAlignment="Center" FontSize="16"/>

    </Grid>
</Window>
