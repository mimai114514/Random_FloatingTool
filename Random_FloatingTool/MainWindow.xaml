<Window x:Class="Random_FloatingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_FloatingTool"
        mc:Ignorable="d"
        Title="Random" Height="50" Width="50" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        
        LocationChanged="MainWindow_LocationChanged"
        ResizeMode="NoResize" WindowState="Normal"
        ShowInTaskbar="False"
        x:Name="Window1" Icon="logo.png" Closed="Window_Closed" Loaded="Window_Loaded" >

    <Image Name="Logo" Source="icon.png" Stretch="Uniform"
           MouseLeftButtonDown="Logo_MouseLeftButtonDown"
           MouseMove="Logo_MouseMove">
        <Image.Clip>
            <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
        </Image.Clip>
    </Image>
</Window>
